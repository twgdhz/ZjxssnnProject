<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/popupwindow_shadow_color" />

            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- White Top color -->
    <item
        android:bottom="5px"
        android:right="5px">
        <shape android:shape="rectangle" >
            <solid android:color="#ffffff" />

            <corners android:radius="5dp" />

            <padding
                android:bottom="15dp"
                android:left="15dp"
                android:right="15dp"
                android:top="15dp" />
        </shape>
    </item>

</layer-list>